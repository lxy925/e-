.first {
  margin-top: 0px;
  width: 100%;
  height: 250rpx;
  position: relative;
}
.swiper {
  width: 100%;
  height: 100%;
}
.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.swiper-text {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}
.second {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  gap: 50rpx;
}
.second-item1 {
  width: 350rpx;
  height: 180rpx;
  background-color: #fff0b9;
  border-radius: 20rpx;
  overflow: hidden;
}
