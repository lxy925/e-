<view class="all"><custom-nav vue-id="741027ac-1" title="e-study" isHomePage="{{false}}" bind:__l="__l"></custom-nav><view class="title">{{"当前第 "+current+" 题 / 共 "+total+" 题"}}</view><progress class="progress" percent="{{percent}}" show-info="{{true}}" border-radius="20" stroke-width="18"></progress><view class="page-section-title">{{subject.title}}</view><radio-group data-event-opts="{{[['change',[['radioChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{subject.options}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="radio-item"><radio value="{{item.code}}" checked="{{showAnswer?item.code===subject.answer:item.code===select}}" color="{{showAnswer?item.code===subject.answer?'green':'red':'#333'}}"></radio><text class="{{[(showAnswer&&item.code===select&&item.code!==subject.answer)?'red':'',(showAnswer&&item.code===subject.answer)?'green':'']}}">{{item.option}}</text></view></block></radio-group><block wx:if="{{showAnswer}}"><view class="answer"><text>{{"正确答案："+subject.answer}}</text></view></block><view class="score"><text>{{"总共答对"+score+"题 / 答错"+errorScore+"题"}}</text></view><view class="button-group"><button data-event-opts="{{[['tap',[['prev',['$event']]]]]}}" class="prev" bindtap="__e">上一题</button><button data-event-opts="{{[['tap',[['showErrorOptions',['$event']]]]]}}" class="error-button" bindtap="__e">查看错题</button><button data-event-opts="{{[['tap',[['clear',['$event']]]]]}}" class="clear" bindtap="__e">重新刷题</button><button data-event-opts="{{[['tap',[['next',['$event']]]]]}}" class="next" bindtap="__e">下一题</button></view></view>